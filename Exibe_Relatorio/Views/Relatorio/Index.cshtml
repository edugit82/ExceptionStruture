@model Model.ViewModel.RelatorioViewModel
@using Model.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script type="text/javascript">
        $(document).ready(function() {
            console.log("work!!!");
        });
    </script>
    <style type="text/css">
     table tr td
     {
         white-space:nowrap;
         text-align: left;
         vertical-align:top;
     }
    </style>
</head>
<body>
    <div>
        <table class="table table-hover">
            @foreach (var x in Model.ListaErros)
            {
                var replace = x.StackTrace.Replace(" em ", "#");
                var split = replace.Split('#');
                <tr><td>@x.DataHora</td></tr>
                <tr><td>@x.Source</td></tr>
                <tr><td>@x.Message</td></tr>
                <tr><td>
                        @foreach (var y in split)
                        {
                            <br> @y
                        }
                    </td>
                </tr>
                <tr><td>---------------------------------------------------------------------------------------------------------------------------------------------</td></tr>
            }
        </table>
    </div>
</body>
</html>
